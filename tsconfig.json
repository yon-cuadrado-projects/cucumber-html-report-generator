{
    "compileOnSave": true,
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        // "alwaysStrict": true,
        // "noImplicitReturns": true,
        // "noFallthroughCasesInSwitch": true,
        // "allowUnreachableCode": false,
        // "allowUnusedLabels": false,
   
        // "forceConsistentCasingInFileNames": true,
        // "noUnusedLocals": true,        
        // "noImplicitAny" : true,
        // "preserveSymlinks": true,
        // "allowJs": true,
        // "sourceMap": true,
        // "declaration": true,
        // "declarationMap": true,
        // "inlineSources": true,
        // "rootDir": "./",
        "outDir": "./dist",
        "sourceMap": false,
        "target": "es2020",
        "module": "commonjs",
        // "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types","./src/lib/types", "test/e2e/types"],
        "types": ["node","long","mocha", "webdriverio/async", "@wdio/cucumber-framework","@wdio/selenium-standalone-service", "@wdio/devtools-service" ],
        "paths": {
            "@models": ["src/lib/models/models.ts"],
            "@common-functions": ["src/lib/common-functions/common-functions.ts"]
        }
    },
    "include": [
        "src/lib/**/**/**/*.ts",
        "test/e2e/**/**/**/*.ts",
        "test/unit/**/**/*.ts",
        "index.ts",
        "src/lib/types/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        ".npm"
    ]
}
